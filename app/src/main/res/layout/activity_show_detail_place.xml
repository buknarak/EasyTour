<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShowDetailPlaceActivity"
    android:background="@drawable/bg02"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linBottonShoedetail">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ชื่อสถานที่ : "
                android:id="@+id/textview"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:singleLine="false"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvnamet"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="จังหวัด : "
                android:id="@+id/textView16"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvprovince"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="หมวด :"
                android:id="@+id/textView18"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvtype"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="เวลาเที่ยว :"
                android:id="@+id/textView20"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvtimeuse"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff"
                android:layout_weight="2" />

        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rlRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ระดับความนิยม : "
                android:id="@+id/tvRating"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvRating"
                android:id="@+id/tvRateview1"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff" />
            <RatingBar

                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:isIndicator="true"
                android:stepSize="1.0"
                style = "?android:attr/ratingBarStyleIndicator"
                android:numStars="7"
                android:max="7"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRating"
                android:background="#3682a6"
                android:textColor="#e3e3e3"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/ratingBar1"
                android:text="Vote!"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รายละเอียด"
            android:id="@+id/textView8"
            android:textSize="@dimen/H2"
            android:textColor="#49c1f9"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imgPlace"

            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_margin="10dp"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvdescrip"
                android:textSize="@dimen/T15"
                android:textColor="#ffffff"/>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>