<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kmutpnb.buk.easytour.DetailConfirmActivity"
    android:background="@drawable/bg02">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="50dp">
        //android:background="#82ffffff"

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รายละเอียด"
            android:textColor="#82d3f9"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ชื่อสถานที่  : "
                android:textColor="#ffffff"
                android:textSize="@dimen/T15"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvNamePlace"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:textSize="@dimen/T15" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="เวลา   : "
                android:textColor="#ffffff"
                android:textSize="@dimen/T15"
                android:layout_weight="1" />


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvtime"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:textSize="@dimen/T15" />
            <Spinner
                android:layout_width="182dp"
                android:layout_height="38dp"
                android:id="@+id/spinnerS"
                android:textColor="#ffffff"
                android:scrollbarSize="20dp"
                android:visibility="gone"
                android:layout_weight="0.27" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="แก้ไข"
            android:background="#057aac"
            android:textColor="#ffffff"
            android:id="@+id/btnedit"
            android:layout_weight="1"
            />

    </LinearLayout>


</RelativeLayout>
